<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <Button
        android:id="@+id/loginLoginA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/loginLoginA"
        app:layout_constraintTop_toTopOf="@+id/loginLoginA"
        tools:layout_editor_absoluteX="1dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/usernameLoginA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:textColor="#FFFFFF" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/loginLoginA"
        app:layout_constraintStart_toEndOf="@+id/loginLoginA"
        app:layout_constraintTop_toTopOf="@+id/loginLoginA">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordLoginA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColor="#FFFFFFFF" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/registerLoginA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="Register"
        app:layout_constraintEnd_toEndOf="@+id/loginLoginA"
        app:layout_constraintStart_toStartOf="@+id/loginLoginA"
        app:layout_constraintTop_toBottomOf="@+id/loginLoginA" />
</androidx.constraintlayout.widget.ConstraintLayout>